{
    "compilerOptions": {
      "target": "esnext",
      "module": "ESNext",
      "sourceMap": true,
      "outDir": "./dist",
      "moduleResolution": "node",
      "removeComments": true,
      "strict": true,
      "strictNullChecks": false,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./types"],
      "rootDirs": [
        "./src"
      ],
    },
    "exclude": [
      "node_modules"
    ]
  }
  